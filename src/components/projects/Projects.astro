---

<section class="section-lg" id="projects">
  <div class="container">
    <div class="section-header fade-in">
      <p class="label">Selected Work</p>
      <h2>Writing & Projects</h2>
    </div>

    <!-- Blog Posts - Card Layout -->
    <div class="blogs-section fade-in">
      <div class="subsection-header">
        <h3 class="subsection-title">Blog Posts</h3>
        <a href="/blog" class="view-all-link">
          View All
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"/>
            <polyline points="12 5 19 12 12 19"/>
          </svg>
        </a>
      </div>

      <!-- Featured post -->
      <a href={blogs[0].link} class="blog-card blog-card--featured">
        <div class="blog-card-inner">
          <span class="blog-date">{blogs[0].date}</span>
          <h4 class="blog-title">{blogs[0].title}</h4>
          <div class="blog-tags">
            {blogs[0].tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
        <div class="blog-card-arrow">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="7" y1="17" x2="17" y2="7"/>
            <polyline points="7 7 17 7 17 17"/>
          </svg>
        </div>
      </a>

      <!-- Rest of posts -->
      <div class="blog-grid">
        {blogs.slice(1, 6).map((blog) => (
          <a href={blog.link} target={blog.link.startsWith('http') ? '_blank' : undefined} rel={blog.link.startsWith('http') ? 'noopener noreferrer' : undefined} class="blog-card">
            <div class="blog-card-inner">
              <span class="blog-date">{blog.date}</span>
              <h4 class="blog-title">{blog.title}</h4>
              <div class="blog-tags">
                {blog.tags.map((tag) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
            <div class="blog-card-arrow">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="7" y1="17" x2="17" y2="7"/>
                <polyline points="7 7 17 7 17 17"/>
              </svg>
            </div>
          </a>
        ))}
      </div>

      {blogs.length > 6 && (
        <a href="/blog" class="more-posts-link">
          <span class="more-dots">&hellip;</span>
          <span class="more-text">{blogs.length - 6} more post{blogs.length - 6 > 1 ? 's' : ''}</span>
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"/>
            <polyline points="12 5 19 12 12 19"/>
          </svg>
        </a>
      )}
    </div>

    <!-- Projects Grid -->
    <div class="projects-section">
      <h3 class="subsection-title fade-in">Past Work</h3>
      <div class="projects-grid">
        {projects.map((project, i) => (
          <a
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class={`project-card card fade-in ${i < 2 ? 'project-card--featured' : ''}`}
            style={`--delay: ${i * 0.05}s`}
          >
            <div class="project-image">
              <img src={project.image} alt={project.title} loading="lazy" />
              <div class="project-image-overlay"></div>
            </div>
            <div class="project-content">
              <span class="project-category">{project.category}</span>
              <h3 class="project-title">{project.title}</h3>
              <p class="project-description">{project.description}</p>
            </div>
            <div class="project-arrow">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="7" y1="17" x2="17" y2="7"/>
                <polyline points="7 7 17 7 17 17"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </div>

    <div class="section-cta fade-in">
      <a href="https://github.com/xd00099" target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
        View All on GitHub
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"/>
          <polyline points="12 5 19 12 12 19"/>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .section-header {
    margin-bottom: var(--space-12);
  }

  .section-header .label {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-4);
  }

  .section-header h2 {
    font-size: var(--text-4xl);
  }

  .subsection-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-6);
  }

  .subsection-title {
    font-size: var(--text-lg);
    font-weight: 500;
    color: var(--color-text-secondary);
    margin-bottom: 0;
  }

  .view-all-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    transition: color var(--duration-fast) var(--ease-out);
  }

  .view-all-link:hover {
    color: var(--color-text);
  }

  /* Blog Cards */
  .blogs-section {
    margin-bottom: var(--space-16);
  }

  .blog-card {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--space-4);
    padding: var(--space-6) var(--space-8);
    border: 1px solid var(--color-border);
    border-radius: 14px;
    background: var(--color-surface-glass);
    transition: all var(--duration-base) var(--ease-out);
    text-decoration: none;
  }

  .blog-card:hover {
    border-color: var(--color-border-hover);
    background: var(--color-surface-glass-hover);
    transform: translateY(-2px);
    box-shadow: 0 8px 32px var(--color-shadow-medium);
  }

  .blog-card--featured {
    margin-bottom: var(--space-6);
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.06) 0%, rgba(139, 92, 246, 0.03) 100%);
    border-color: rgba(99, 102, 241, 0.15);
    padding: var(--space-8);
  }

  .blog-card--featured:hover {
    border-color: rgba(99, 102, 241, 0.3);
    box-shadow: 0 8px 40px rgba(99, 102, 241, 0.1);
  }

  .blog-card--featured .blog-title {
    font-size: var(--text-xl);
    font-weight: 600;
  }

  .blog-card-inner {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .blog-date {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    font-variant-numeric: tabular-nums;
  }

  .blog-title {
    font-size: var(--text-base);
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.4;
  }

  .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-2);
  }

  .tag {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    padding: var(--space-1) var(--space-3);
    background: var(--color-hover-fill);
    border-radius: 6px;
    white-space: nowrap;
    border: 1px solid var(--color-soft-border-inner);
  }

  .blog-card-arrow {
    color: var(--color-text-muted);
    opacity: 0;
    transform: translate(-4px, 4px);
    transition: all var(--duration-fast) var(--ease-out);
    flex-shrink: 0;
    margin-top: var(--space-1);
  }

  .blog-card:hover .blog-card-arrow {
    opacity: 1;
    transform: translate(0, 0);
  }

  .blog-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
  }

  .more-posts-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4) 0;
    color: var(--color-text-muted);
    font-size: var(--text-sm);
    transition: color var(--duration-fast) var(--ease-out);
    margin-top: var(--space-4);
  }

  .more-posts-link:hover {
    color: var(--color-text-secondary);
  }

  .more-dots {
    font-size: var(--text-lg);
    letter-spacing: 0.15em;
    line-height: 1;
  }

  /* Projects Section */
  .projects-section {
    margin-bottom: var(--space-12);
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: auto auto;
    gap: var(--space-6);
  }

  /* Featured projects (first two) span wider */
  .project-card--featured {
    grid-column: span 1;
  }

  .project-card--featured:first-child {
    grid-column: 1 / 3;
  }

  .project-card {
    position: relative;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    transition-delay: var(--delay);
  }

  .project-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px var(--color-shadow-strong),
                0 0 0 1px var(--color-soft-border-inner);
  }

  .project-image {
    aspect-ratio: 16/10;
    overflow: hidden;
    border-radius: 16px 16px 0 0;
    position: relative;
  }

  .project-card--featured .project-image {
    aspect-ratio: 2/1;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--duration-slow) var(--ease-out);
  }

  .project-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, transparent 50%, rgba(0, 0, 0, 0.4) 100%);
    opacity: 0;
    transition: opacity var(--duration-base) var(--ease-out);
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-card:hover .project-image-overlay {
    opacity: 1;
  }

  .project-content {
    padding: var(--space-6);
    flex: 1;
  }

  .project-category {
    font-size: var(--text-xs);
    color: var(--color-accent-indigo);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 500;
  }

  .project-title {
    font-size: var(--text-xl);
    font-weight: 500;
    color: var(--color-text);
    margin: var(--space-2) 0;
  }

  .project-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  .project-arrow {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-overlay-arrow);
    backdrop-filter: blur(10px);
    border-radius: 50%;
    color: var(--color-text);
    opacity: 0;
    transform: translate(-8px, 8px);
    transition: all var(--duration-base) var(--ease-out);
    border: 1px solid var(--color-soft-border);
  }

  .project-card:hover .project-arrow {
    opacity: 1;
    transform: translate(0, 0);
  }

  .section-cta {
    text-align: center;
  }

  @media (max-width: 900px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .project-card--featured:first-child {
      grid-column: 1 / -1;
    }

    .blog-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 600px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }

    .project-card--featured:first-child {
      grid-column: 1;
    }

    .blog-card {
      padding: var(--space-4);
    }

    .blog-card--featured {
      padding: var(--space-5);
    }

    .blog-card--featured .blog-title {
      font-size: var(--text-base);
    }
  }
</style>
