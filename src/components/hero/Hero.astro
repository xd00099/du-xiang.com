</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-left: 72px;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
    opacity: 0.3;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    padding: var(--space-8);
    width: 100%;
    max-width: 650px;
  }

  .chat-wrapper {
    position: relative;
    margin-bottom: var(--space-10);
  }

  /* Chat Window */
  .chat-window {
    background: rgba(18, 18, 18, 0.9);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    overflow: hidden;
    box-shadow:
      0 0 0 1px rgba(255,255,255,0.05),
      0 20px 50px -10px rgba(0,0,0,0.5),
      0 0 100px -20px rgba(139, 92, 246, 0.15);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  /* Window Header */
  .chat-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-3) var(--space-4);
    background: rgba(255,255,255,0.02);
    border-bottom: 1px solid var(--color-border);
  }

  .window-controls {
    display: flex;
    gap: 8px;
  }

  .control {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--color-bg-elevated);
  }

  .control.red { background: #ff5f57; }
  .control.yellow { background: #febc2e; }
  .control.green { background: #28c840; }

  .chat-title {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #28c840;
    animation: pulse-dot 2s ease infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .chat-actions {
    color: var(--color-text-muted);
  }

  /* Chat Body */
  .chat-body {
    padding: var(--space-6);
    min-height: 280px;
    max-height: 400px;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .chat-body::-webkit-scrollbar {
    width: 4px;
  }

  .chat-body::-webkit-scrollbar-thumb {
    background: rgba(255,255,255,0.1);
    border-radius: 2px;
  }

  .system-message {
    text-align: center;
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    padding: var(--space-3);
    opacity: 0;
    animation: fadeIn 0.5s ease forwards;
    animation-delay: 0.2s;
  }

  /* Messages */
  .message {
    display: none;
    gap: var(--space-3);
    opacity: 0;
    transform: translateY(10px);
  }

  .message.visible {
    display: flex;
    animation: slideIn 0.3s ease forwards;
  }

  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .user-message {
    flex-direction: column;
    align-items: flex-end;
  }

  .user-message .message-bubble {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: #fff;
    padding: var(--space-3) var(--space-4);
    border-radius: 18px 18px 4px 18px;
    max-width: 280px;
    font-size: var(--text-base);
  }

  .ai-message {
    align-items: flex-start;
  }

  .avatar {
    width: 36px;
    height: 36px;
    border-radius: 10px;
    background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
    border: 1px solid var(--color-border);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-text);
    flex-shrink: 0;
  }

  .ai-message .message-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .ai-message .message-bubble {
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    padding: var(--space-3) var(--space-4);
    border-radius: 4px 18px 18px 18px;
    max-width: 400px;
    font-size: var(--text-base);
    line-height: 1.6;
  }

  .message-meta {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    padding: 0 var(--space-2);
  }

  /* Thinking dots */
  .thinking-message {
    display: none;
  }

  .thinking-message.visible {
    display: flex;
    animation: slideIn 0.3s ease forwards;
  }

  .thinking-bubble {
    padding: var(--space-4) !important;
  }

  .thinking-dots {
    display: flex;
    gap: 4px;
  }

  .thinking-dots span {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--color-text-muted);
    animation: bounce 1.4s ease infinite;
  }

  .thinking-dots span:nth-child(2) { animation-delay: 0.2s; }
  .thinking-dots span:nth-child(3) { animation-delay: 0.4s; }

  @keyframes bounce {
    0%, 60%, 100% { transform: translateY(0); }
    30% { transform: translateY(-6px); }
  }

  /* Typing cursor */
  .typing-cursor {
    display: inline-block;
    width: 2px;
    height: 1.1em;
    background: currentColor;
    margin-left: 2px;
    animation: blink 0.8s ease infinite;
    vertical-align: text-bottom;
  }

  .typing-cursor.hidden {
    display: none;
  }

  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }

  /* Chat Input */
  .chat-input {
    padding: var(--space-4);
    border-top: 1px solid var(--color-border);
    opacity: 0;
  }

  .chat-input.visible {
    animation: fadeIn 0.5s ease forwards;
  }

  .input-wrapper {
    display: flex;
    gap: var(--space-2);
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: var(--space-2);
    transition: opacity 0.3s ease;
  }

  .input-wrapper.hidden {
    opacity: 0.5;
    pointer-events: none;
  }

  .input-wrapper input {
    flex: 1;
    background: none;
    border: none;
    outline: none;
    color: var(--color-text);
    font-size: var(--text-sm);
    padding: var(--space-2) var(--space-3);
  }

  .input-wrapper input::placeholder {
    color: var(--color-text-muted);
  }

  .send-btn {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    border: none;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    opacity: 0.5;
    transition: all var(--duration-fast) var(--ease-out);
  }

  .send-btn.active {
    opacity: 1;
  }

  .send-btn.active:hover {
    transform: scale(1.05);
    box-shadow: 0 0 15px rgba(99, 102, 241, 0.4);
  }

  .input-hint {
    text-align: center;
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    margin-top: var(--space-2);
    transition: opacity 0.3s ease;
  }

  .input-hint.hidden {
    opacity: 0;
  }

  /* Joke message link styling */
  #joke-message .message-bubble a {
    color: #a78bfa;
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }

  #joke-message .message-bubble a:hover {
    color: #c4b5fd;
  }

  /* Floating Badges */
  .floating-badges {
    position: absolute;
    top: 50%;
    right: -20px;
    transform: translateY(-50%) translateX(100%);
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .badge {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    background: rgba(18, 18, 18, 0.9);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
    white-space: nowrap;
    opacity: 0;
    transform: translateX(-10px);
    backdrop-filter: blur(10px);
  }

  .badge-1 { animation: badgeIn 0.4s ease forwards; animation-delay: 3.5s; }
  .badge-2 { animation: badgeIn 0.4s ease forwards; animation-delay: 3.7s; }
  .badge-3 { animation: badgeIn 0.4s ease forwards; animation-delay: 3.9s; }

  @keyframes badgeIn {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Hero Actions */
  .hero-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    opacity: 0;
  }

  .hero-actions.visible {
    animation: fadeIn 0.5s ease forwards;
  }

  .hero-actions .btn {
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  /* Scroll Hint */
  .scroll-hint {
    position: absolute;
    bottom: var(--space-10);
    left: calc(50% + 36px);
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
    opacity: 0;
  }

  .scroll-hint.visible {
    animation: fadeIn 0.5s ease forwards;
  }

  .scroll-hint span {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    letter-spacing: 0.05em;
  }

  .scroll-mouse {
    width: 24px;
    height: 38px;
    border: 2px solid var(--color-text-muted);
    border-radius: 12px;
    display: flex;
    justify-content: center;
    padding-top: 8px;
  }

  .scroll-wheel {
    width: 3px;
    height: 8px;
    background: var(--color-text-muted);
    border-radius: 2px;
    animation: scroll-down 2s ease infinite;
  }

  @keyframes scroll-down {
    0% { transform: translateY(0); opacity: 1; }
    50% { transform: translateY(6px); opacity: 0.5; }
    100% { transform: translateY(0); opacity: 1; }
  }

  @media (max-width: 900px) {
    .floating-badges {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .hero {
      margin-left: 0;
      padding-top: 80px;
    }

    .hero-content {
      padding: var(--space-4);
    }

    .chat-body {
      min-height: 240px;
      padding: var(--space-4);
    }

    .user-message .message-bubble,
    .ai-message .message-bubble {
      max-width: 260px;
      font-size: var(--text-sm);
    }

    .hero-actions {
      flex-direction: column;
      align-items: center;
    }

    .hero-actions .btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }

    .scroll-hint {
      left: 50%;
    }
  }
</style>

<script>
  // DOM elements - Initial animation
  const chatBody = document.getElementById('chat-body');
  const userMessage = document.getElementById('user-message');
  const userText = document.getElementById('user-text');
  const userCursor = document.getElementById('user-cursor');
  const thinkingIndicator = document.getElementById('thinking-indicator');
  const aiMessage = document.getElementById('ai-message');
  const aiText = document.getElementById('ai-text');
  const aiCursor = document.getElementById('ai-cursor');
  const chatInput = document.getElementById('chat-input');
  const heroActions = document.getElementById('hero-actions');
  const scrollHint = document.getElementById('scroll-hint');

  // DOM elements - Interactive chat
  const userInput = document.getElementById('user-input') as HTMLInputElement;
  const sendBtn = document.getElementById('send-btn');
  const inputWrapper = document.getElementById('input-wrapper');
  const inputHint = document.getElementById('input-hint');
  const newUserMessage = document.getElementById('new-user-message');
  const newUserText = document.getElementById('new-user-text');
  const jokeThinking = document.getElementById('joke-thinking');
  const jokeMessage = document.getElementById('joke-message');
  const jokeText = document.getElementById('joke-text');
  const jokeCursor = document.getElementById('joke-cursor');

  // Content
  const initialQuestion = "Who are you?";
  const initialResponse = "I'm Du Xiang â€” a founding engineer and AI researcher who builds systems that scale from zero to millions of users. My work spans LLM research, agentic RAG, and production ML infrastructure. I love turning cutting-edge AI research into real products.";

  // Joke response with HTML - we'll parse and stream this specially
  const jokeResponseText = "Haha, I appreciate the curiosity! ðŸ˜„ Unfortunately, I don't have the budget to burn tokens just for website visitors â€” running AI isn't cheap! But hey, if you'd like to chat with a real AI version of me someday, you can ";
  const jokeResponseLink1 = '<a href="https://buymeacoffee.com/duxiang" target="_blank">buy me a coffee</a>';
  const jokeResponseText2 = " or sponsor my work. Until then, feel free to reach out the old-fashioned way via ";
  const jokeResponseLink2 = '<a href="#contact">email</a>';
  const jokeResponseText3 = "! ðŸ’¬";

  let userIndex = 0;
  let aiIndex = 0;
  let jokeIndex = 0;
  let hasInteracted = false;

  // Scroll chat to bottom
  function scrollToBottom() {
    if (chatBody) {
      chatBody.scrollTop = chatBody.scrollHeight;
    }
  }

  // Animation sequence - Initial
  function startAnimation() {
    setTimeout(() => {
      userMessage?.classList.add('visible');
      typeInitialUser();
    }, 800);
  }

  function typeInitialUser() {
    if (userIndex < initialQuestion.length) {
      userText!.textContent += initialQuestion[userIndex];
      userIndex++;
      setTimeout(typeInitialUser, 70 + Math.random() * 50);
    } else {
      userCursor?.classList.add('hidden');
      showInitialThinking();
    }
  }

  function showInitialThinking() {
    setTimeout(() => {
      thinkingIndicator?.classList.add('visible');
      scrollToBottom();
      setTimeout(() => {
        thinkingIndicator?.classList.remove('visible');
        setTimeout(() => {
          aiMessage?.classList.add('visible');
          scrollToBottom();
          typeInitialAi();
        }, 200);
      }, 1200);
    }, 400);
  }

  function typeInitialAi() {
    if (aiIndex < initialResponse.length) {
      aiText!.textContent += initialResponse[aiIndex];
      aiIndex++;
      scrollToBottom();
      setTimeout(typeInitialAi, 18 + Math.random() * 12);
    } else {
      aiCursor?.classList.add('hidden');
      showFinalElements();
    }
  }

  function showFinalElements() {
    setTimeout(() => {
      chatInput?.classList.add('visible');
      heroActions?.classList.add('visible');
      setTimeout(() => {
        scrollHint?.classList.add('visible');
      }, 300);
    }, 400);
  }

  // Start initial animation
  startAnimation();

  // Interactive chat functionality
  userInput?.addEventListener('input', () => {
    if (userInput.value.trim()) {
      sendBtn?.classList.add('active');
    } else {
      sendBtn?.classList.remove('active');
    }
  });

  function handleSend() {
    if (userInput?.value.trim() && !hasInteracted) {
      hasInteracted = true;
      const message = userInput.value.trim();

      // Show user's new message
      if (newUserText) newUserText.textContent = message;
      newUserMessage?.classList.add('visible');
      scrollToBottom();

      // Disable input
      inputWrapper?.classList.add('hidden');
      inputHint?.classList.add('hidden');
      userInput.value = '';
      sendBtn?.classList.remove('active');

      // Show thinking dots after delay
      setTimeout(() => {
        jokeThinking?.classList.add('visible');
        scrollToBottom();

        // Hide thinking, show response
        setTimeout(() => {
          jokeThinking?.classList.remove('visible');
          setTimeout(() => {
            jokeMessage?.classList.add('visible');
            scrollToBottom();
            typeJokeResponse();
          }, 200);
        }, 1500);
      }, 500);
    }
  }

  function typeJokeResponse() {
    const fullText = jokeResponseText;

    if (jokeIndex < fullText.length) {
      jokeText!.textContent += fullText[jokeIndex];
      jokeIndex++;
      scrollToBottom();
      setTimeout(typeJokeResponse, 20 + Math.random() * 15);
    } else {
      // Add the first link
      jokeText!.innerHTML += jokeResponseLink1;
      setTimeout(() => {
        // Stream the middle text
        streamText(jokeResponseText2, () => {
          // Add the second link
          jokeText!.innerHTML += jokeResponseLink2;
          setTimeout(() => {
            // Stream the final text
            streamText(jokeResponseText3, () => {
              jokeCursor?.classList.add('hidden');
            });
          }, 50);
        });
      }, 50);
    }
  }

  function streamText(text: string, callback: () => void) {
    let i = 0;
    function type() {
      if (i < text.length) {
        jokeText!.innerHTML += text[i];
        i++;
        scrollToBottom();
        setTimeout(type, 10 + Math.random() * 10);
      } else {
        callback();
      }
    }
    type();
  }

  // Event listeners
  userInput?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter') {
      handleSend();
    }
  });

  sendBtn?.addEventListener('click', handleSend);
</script>
